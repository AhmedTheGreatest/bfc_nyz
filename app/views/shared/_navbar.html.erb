<header id="navbar" class="sticky top-0 bg-base-100 shadow-sm z-50">
  <!-- Top Row: Logo -->
  <div class="flex justify-center items-center transition-all duration-300" id="logo-row">
    <%= link_to root_path do %>
      <%= image_tag "bfc_logo.png", alt: "BFC NYZ", class: "h-32 sm:h-36 transition-all duration-300" %>
    <% end %>
  </div>

  <!-- Bottom Row: Links -->
  <nav class="bg-base-100 border-t border-gray-200">
    <div class="container mx-auto flex justify-center">
      <ul class="menu menu-horizontal px-1 gap-2 py-2">
        <li><%= link_to "Home", root_path, class: "btn btn-ghost" %></li>
        <li><%= link_to "About", about_path, class: "btn btn-ghost" %></li>
        <li><%= link_to "Academics", academics_path, class: "btn btn-ghost" %></li>
        <li><%= link_to "Facilities", facilities_path, class: "btn btn-ghost" %></li>
        <li><%= link_to "Contact", contact_path, class: "btn btn-ghost" %></li>
      </ul>
    </div>
  </nav>
</header>
