<section class="container mx-auto px-4 py-16">
  <div class="max-w-3xl mx-auto">

    <%= link_to "â† Back to Announcements",
                announcements_path,
                class: "text-sm text-gray-500 hover:underline" %>

    <div class="mt-6 card bg-base-100 shadow-sm">
      <div class="card-body">

        <div class="flex items-start justify-between">
          <h1 class="text-3xl font-bold">
            <%= @announcement.title %>
          </h1>

          <div class="flex items-center gap-2">
            <% if @announcement.pinned? %>
              <span class="badge badge-primary badge-outline">
                ðŸ“Œ Pinned
              </span>
            <% end %>

            <% if Current.user&.admin? %>
              <%= link_to "Edit", edit_announcement_path(@announcement),
                          class: "btn btn-sm btn-outline btn-primary" %>
              <%= button_to  "Delete", announcement_path(@announcement),
                          method: :delete,
                          class: "btn btn-sm btn-outline btn-error" %>
            <% end %>
          </div>
        </div>

        <p class="text-gray-500 mt-2">
          Posted on <%= @announcement.created_at.strftime("%d %B %Y") %>
        </p>

        <div class="divider"></div>

        <div class="prose max-w-none">
          <%= @announcement.body %>
        </div>

      </div>
    </div>
  </div>
</section>
